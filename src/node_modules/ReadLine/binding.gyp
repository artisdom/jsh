{
  "targets": [
    {
      "target_name": "ReadLine",
      "sources": [ "ReadLine.cpp" ],
      "cflags_cc": [ "-std=c++0x" ],
      'cflags!': [ '-fno-exceptions' ],
      'cflags_cc!': [ '-fno-exceptions' ],
      'conditions': [
        ['OS=="mac"', {
          'xcode_settings': {
            'GCC_ENABLE_CPP_EXCEPTIONS': 'YES'
          }
        }]
      ],
      "libraries": [ "-lreadline" ],
      "include_dirs": [ "../../../3rdparty/utf8/source", "../common" ],
      'conditions': [
        [ 'OS=="mac"', {

          'xcode_settings': {
            'OTHER_CPLUSPLUSFLAGS' : ['-std=c++11','-stdlib=libc++','-mmacosx-version-min=10.7'],
            'OTHER_LDFLAGS': ['-stdlib=libc++'],
            },
        }],
      ]
    }
  ]
}
