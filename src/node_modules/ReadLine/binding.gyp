{
  "targets": [
    {
      "target_name": "ReadLine",
      "sources": [ "ReadLine.cpp" ],
      "cflags_cc": [ "-std=c++0x" ],
      'cflags!': [ '-fno-exceptions' ],
      'cflags_cc!': [ '-fno-exceptions' ],
      'conditions': [
        ['OS=="mac"', {
          'xcode_settings': {
            'GCC_ENABLE_CPP_EXCEPTIONS': 'YES'
          }
        }]
      ],
      "libraries": [ "-lreadline" ],
      "include_dirs": [ "../../../3rdparty/utf8/source", "../common", "<!(node -e \"require('nan')\")" ],
      'conditions': [
        [ 'OS=="mac"', {
          'xcode_settings': {
            'MACOSX_DEPLOYMENT_TARGET': '10.7',
            'OTHER_CPLUSPLUSFLAGS' : ['-std=c++11','-stdlib=libc++','-I/usr/local/Cellar/readline/6.2.4/include'],
            'OTHER_LDFLAGS': ['-stdlib=libc++','-L/usr/local/Cellar/readline/6.2.4/lib'],
            },
        }],
      ]
    }
  ]
}
